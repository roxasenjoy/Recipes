<!DOCTYPE html>
<html>
    <head>
        <title>Ma page web</title>
        <link rel="stylesheet" href="index.css">
        <script src="index.js"></script>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

        <!-- jQuery et Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    </head>

    <body>

        <div class="recipes-list">
            <% recettes.forEach((row) => { %>
                <a href="" class="recipe-link" data-id="<%= row.id %>">
                    <div class="container">
                        <img src=<%= row.image %> alt=''>
                        <p id="title"><%= row.name %></p>
                    </div>
                </a>
            <% }); %>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="myModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <% ingredients.forEach((row) => { %>
                            <!-- <p><%= row.name %></p> -->
                        <% }); %>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </body>


    <SCRIPT>
        $(document).ready(function(){
            $(".recipe-link").click(function(e){
                e.preventDefault();  // Empêche l'action par défaut (la navigation)
                
                var id = $(this).data('id');  // Récupère l'ID de l'élément cliqué
                
                // Envoie une requête AJAX au serveur avec l'ID
                $.ajax({
                    url: '/',
                    type: 'GET',
                    data: { id: id },
                    success: function(response) {
                        var ingredients = response.ingredients;

                        console.log(ingredients);

                        var modalBody = "";

                        for (var i = 0; i < ingredients.length; i++) {
                            modalBody += "<p>" + ingredients[i].name + "</p>";
                        }

                        $(".modal-body").html(modalBody);
                        $('#myModal').modal('show');
                    }
                });
            });
        });
    </SCRIPT>
</html>

