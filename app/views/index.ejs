                                modalBody += "<p class='instructions'>" +newInstruction[i] + ".<br></p>"; // Ajoute une balise <br> à chaque phrase
                            }
                        }

                        $(".modal-body").html(modalBody);

                        $('#myModal').modal('show');
                    }
                });
            });
        });
    </SCRIPT>
</html>

