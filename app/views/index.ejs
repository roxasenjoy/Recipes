                e.preventDefault();  // Empêche l'action par défaut (la navigation)
                
                var id = $(this).data('id');  // Récupère l'ID de l'élément cliqué
                
                // Envoie une requête AJAX au serveur avec l'ID
                $.ajax({
                    url: '/',
                    type: 'GET',
                    data: { id: id },
                    success: function(response) {

                        var ingredients = response.ingredients;
                        var recettes = response.recettes;
                        var instructions = response.instructions;

                        var modalBody = "";

                        /* Changer l'image de la photo */
                        $("#img-recipes").attr("src", recettes[0].image);

                        /* Nom de la recette */
                        modalBody += '<h2  class="recipe-title"> ' + recettes[0].name + '</h2>';

                        /* Liste des ingrédients */
                        modalBody += "<p class='title-ingredients'> Ingrédients pour 2 personnes : </p>";
                        for (var i = 0; i < ingredients.length; i++) {
                            modalBody += "<p class='ingredients'> - " + ingredients[i].name + "</p>";
                        }

                        /* Liste des instructions */
                        for (var i = 0; i < instructions.length; i++) {
                            ;
                            /*
                                Obtenir l'étape 
                                Supprimer le premier caractère qui correspond à l'étape
                                Insérer la valeur qui contient l'étape 
                                Insérer l'instruction à côté 
                            */
                            const step = instructions[i].step;
                            const texte = instructions[i].instructions;
                            const deuxiemeMaj = deuxiemeMajuscule(texte);

                            // TODO -> OBTENIR LA CLE DE LA DEUXIEME LETTRE EN MASJUSCULE DE LA CHAINE DE CARACTERE

                            let indexSecondSautDeLigne = texte.indexOf(deuxiemeMaj, texte.indexOf(deuxiemeMaj) + 1);
                            let newInstruction = texte.substring(indexSecondSautDeLigne + 1);

                            // Ajout de l'étape
                            modalBody += "<p class='step'> Étape n°" + step + "</p>";

                            let html = '';
